<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale_order_manual_variant_form_view">
            <field name="name">sale.order.manual.variant.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_product_variants.sale_order_extended_form_view" />
            <field name="priority" eval="20" />
            <field name="arch" type="xml">
                <xpath
                    expr="//label[@for='product_attributes']"
                    position="replace">
                </xpath>
                <xpath
                    expr="//field[@name='product_attributes']"
                    position="replace">
                    
                    <label for="product_attributes"
                        attrs="{'invisible':['|', ('product_attributes','=',[]), ('product_id', '!=', False)]}" />
                    <field name="product_attributes"
                        attrs="{'invisible':['|', ('product_attributes','=',[]), ('product_id', '!=', False)]}"
                        options="{'no_create': True, 'no_delete': True}">
                        <tree create="0" delete="0" editable="1">
                            <field name="attribute" />
                            <field name="possible_values" invisible="True" />
                            <field name="value" />
                            <field name="price_extra" readonly="True" />
                        </tree>
                    </field>
                
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_manual_variant_form_view">
            <field name="name">sale.order.line.manual_variant.form</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale_product_variants.sale_order_line_extended_form_view" />
            <field name="arch" type="xml">
                <xpath
                    expr="//label[@for='product_attributes']"
                    position="replace">
                </xpath>
                <xpath
                    expr="//field[@name='product_attributes']"
                    position="replace">
                    
                    <label for="product_attributes" 
                        attrs="{'invisible':['|', ('product_attributes','=',[]), ('product_id', '!=', False)]}" />
                    <field name="product_attributes"
                        attrs="{'invisible': ['|', ('product_attributes','=',[]), ('product_id', '!=', False)]}"
                        options="{'no_create': True, 'no_delete': True}">
                        <tree create="0" delete="0" editable="1">
                            <field name="attribute" />
                            <field name="value" />
                            <field name="price_extra" readonly="True" />
                        </tree>
                    </field>
                
                </xpath>
            </field>
        </record>

    </data>
</openerp>
