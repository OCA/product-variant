<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <!--Product Display -->

        <record id="product_display_form_view" model="ir.ui.view">
            <field name="name">product.display.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product_variant_generator.product_normal_variant_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_multi_variants']/.." position="after">
                    <field name="is_displays"/>
                    <label for="is_displays" />
                </xpath>
                <notebook position="inside">
                    <page string="Product Display" attrs="{'invisible':[('is_displays','=',False)]}">
                        <group colspan="2" col="2">
                            <field name="display_for_product_ids" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
