<?xml version="1.0" ?>
<odoo>
    <record id="product_attribute_view_form_variant_default_code" model="ir.ui.view">
        <field name="name">
                product.attribute.form.variant_default_code
            </field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='value_ids']//field[@name='name']"
                position="after"
            >
                <field name="code" />
            </xpath>
        </field>
    </record>
</odoo>
