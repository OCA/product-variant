<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="product_normal_form_view_default_check_inherit" model="ir.ui.view">
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="product_variant_sale_price.product_normal_form_view_default_check"
        />
        <field name="arch" type="xml">
            <field name="fix_price" position="after">
                <field
                    name="variant_sale_price"
                    widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"
                />
            </field>
        </field>
    </record>

    <record id="product_variant_easy_edit_price_view_inherit" model="ir.ui.view">
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="product_variant_sale_price.product_variant_easy_edit_price_view"
        />
        <field name="arch" type="xml">
            <field name="fix_price" position="after">
                <field
                    name="variant_sale_price"
                    widget='monetary'
                    options="{'currency_field': 'currency_id', 'field_digits': True}"
                />
            </field>
        </field>
    </record>

</odoo>
