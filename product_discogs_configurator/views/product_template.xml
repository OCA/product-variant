<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="inside">
                <group name="discogs" string="Discogs">
                    <field name="discogs_id" groups="base.group_no_one" />
                </group>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="open_discogs_url" icon="fa-compact-disc" string="View on Discogs" attrs="{'invisible': [('discogs_id', '=', 0)]}" />
            </xpath>
        </field>
    </record>

</odoo>
